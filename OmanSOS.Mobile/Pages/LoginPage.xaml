<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmanSOS.Mobile.Pages.LoginPage"
             BackgroundColor="{DynamicResource SecondaryColor}"
             Title="Login">
    
    <VerticalStackLayout Margin="20,35,20,25" VerticalOptions="Start" HorizontalOptions="Center">
        
        <Image
            Source="logo.jpg"
            Aspect="AspectFit"
            WidthRequest="250"
            HeightRequest="250"/>
        
        <Entry Keyboard="Email"
               Placeholder="Enter Email Address"
               PlaceholderColor="LightGrey"
               VerticalOptions="CenterAndExpand"
               ReturnCommand="{Binding }"/>

        <Entry Keyboard="Text"
               IsPassword="True"
               Placeholder="Enter Password"
               PlaceholderColor="LightGrey"
               VerticalOptions="CenterAndExpand" />

        <Button Text="SIGN IN"
                Margin="0,20,0,10"
                Clicked="Login"/>

        <Button Text="SIGN UP"
                Margin="0,0,0,10"
                Clicked="GoToRegisterPage"/>

        <Label x:Name="LblForgetPassword"
               Text="I Forgot My Password"
               HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
