@page "/make-donation/{DonationType}"
@layout MainLayout
@inject NavigationManager navigationManager

<h3 class="mb-4">@(DonationType)</h3>

<MudTextField 
    T="decimal" 
    @bind-Value="amount" 
    Label="Amount in OMR"
    Margin="Margin.Dense"
    Class="my-6"
    Variant="Variant.Outlined" />
<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" FullWidth="true" Class="my-3" OnClick="Submit">
    Donate
</MudButton>
<MudButton Variant="Variant.Text" Color="Color.Primary" Size="Size.Large" FullWidth="true" OnClick="GoBack">
    Go Back
</MudButton>

@code 
{
    // Properties
    [Parameter] public string DonationType { get; set; }
    decimal amount { get; set; } = 0.0M;

    // Private Methods
    private void Submit()
    {
        navigationManager.NavigateTo($"/payment/{amount}");
    }

    private void GoBack()
    {
        navigationManager.NavigateTo("/donation-list");
    }
}