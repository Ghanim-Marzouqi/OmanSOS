@page "/rating"
@layout MainLayout
@inject ISnackbar snackbar
@inject NavigationManager navigationManager

<h3 class="mb-4">Rate us</h3>

<div class="d-flex flex-column align-center pa-8">
    <MudRating SelectedValue="rating" Size="Size.Large" Class="mb-4" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" OnClick="OnRatingSendClicked">Send</MudButton>
    <MudButton Variant="Variant.Text" Color="Color.Primary" Size="Size.Large" FullWidth="true" Class="mt-4" OnClick="GoBack">
        Go Back
    </MudButton>
</div>

@code {
    // Properties
    private int rating { get; set; }

    // Private Methods
    private void OnRatingSendClicked() => snackbar.Add("Thank you for rating us", Severity.Success);

    private void GoBack() => navigationManager.NavigateTo("/home");
}