<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmanSOS.Mobile.Pages.RequestHelpPage"
             BackgroundColor="{DynamicResource SecondaryColor}"
             Title="Request A Help">

    <VerticalStackLayout Margin="20,35,20,25" VerticalOptions="Start" HorizontalOptions="Center">

        <Entry x:Name="EnCategory"
               Placeholder="Enter Category"
               PlaceholderColor="LightGrey"
               WidthRequest="250"/>

        <Entry x:Name="EnCity"
               Placeholder="Enter City"
               PlaceholderColor="LightGrey"
               WidthRequest="250"/>

        <Entry x:Name="EnAddress"
               Placeholder="Enter Address"
               PlaceholderColor="LightGrey"
               WidthRequest="250"/>

        <Editor x:Name="EnDescription"
                Placeholder="Enter Short Description About What You Need"
                PlaceholderColor="LightGrey"
                HeightRequest="100"
                WidthRequest="250"/>

        <Button Text="SEND REQUEST"
                Margin="0,20,0,10"
                WidthRequest="250"
                Clicked="SendRequest"/>

    </VerticalStackLayout>
</ContentPage>
